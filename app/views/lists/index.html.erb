<div class="navbar">
  <i class="fad fa-popcorn"></i>
  <%= link_to 'Create List', new_list_path, class: 'btn btn-primary' %>
</div>

<div class="banner" style="background-image: linear-gradient(90deg, rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'banner-image.jpg' %>)">
  <h1>Lists</h1>
</div>


<div class="container cards">

      <% @lists.each do |l| %>
        <% if l.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path l.photo.key %>')">
        <% else %>
          <div class="card-category">
        <% end %>
        <%= link_to l.name, list_path(l) %>
        </div>
      <% end %>

</div>
